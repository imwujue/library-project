/* userRecord.wxss */

.content{
  opacity: 0.9;
  background: #3d3d3d;
  padding-bottom:30rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 40rpx;
  border-radius: 50%;
  border-width: 3rpx;
  border-color: #ffffff;
}
.userinfo-nickname {
    margin-top: -20rpx;
    color: #fff;
}
.Info::after{
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 300rpx;
  right: 30rpx;
  height: 3px;
  border-bottom: 5rpx solid #fff;
  color: #D8D8D8;
}

.rank_block{
  width: 600rpx;
  height: 300rpx;
  background: #fff;
  border: 5rpx solid #fdc441;
  margin: auto;
  border-radius: 10px;
  text-align: center;
  margin-top: 50rpx;
   color: #fff; 
}

.record_logo{
  width:50rpx;
  height: 50rpx;
  margin-top: 40rpx;
  margin-right: 20rpx;
 
}

.user_data{
  margin-top:25rpx;
  font-size: 20px;
}