/* pages/notification/notice.wxss */
.box{
    width: 100%;
    overflow: scroll;
}
.email_box{
    margin-top: 20rpx; 
    margin-left: 20rpx;
    margin-right: 20rpx;

    padding: 40rpx;
    padding-top: 0rpx;    
    border-radius: 30rpx;
    background-color: #eeeeee;
    display: flex;
    flex-direction: column;
}

.command_layer{
    display: flex;
    flex-direction: row;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
}

.info_title{
    /*text-justify: newspaper;*/
    /*margin: 10rpx;*/
    width: 600rpx;
    line-height: 23px;
    font-size: 17pt;
}

.clear_button{
    /*align-items: flex-end;*/
    align-self: flex-end;
    float: right;
    /*align-self: flex-end;*/
}

.message_layer{
    background-color: #f5f5f5;
    width: 100%;
    padding-bottom: 20rpx;
    padding-top: 20rpx;    
    margin-bottom: 10rpx;
    display: flex;
    flex-direction: column;
}

.title{
    font-weight: 500;
    margin-bottom: 10rpx;
    padding-left: 20rpx;
}

.content{
    padding: 20rpx;
}

.content_text{
    font-weight: 100;
    font-size: 13pt;
    color: #888888;
    /*text-indent: 2px;*/
}

.signature{
    font-weight: 100;
    font-size: 13pt;
    padding-right: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}